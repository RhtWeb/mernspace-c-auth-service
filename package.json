{
  "name": "mernspace-c-auth-service",
  "version": "1.0.0",
  "type": "module",
  "description": "Auth Service",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env.development -- tsx watch src/server.ts",
    "start": "tsc --watch & node --watch dist/server.js",
    "@comment:start": "dotenv -e .env.production -- tsc --watch & node --watch dist/server.js",
    "format:fix": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "dotenv -e .env.test -- vitest",
    "test:integration": "dotenv -e .env.test -- vitest tests/integration",
    "test:watch": "dotenv -e .env.test -- vitest --watch",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage",
    "prepare": "husky",
    "db:generate": "pnpm tsx node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "pnpm tsx node_modules/drizzle-kit/bin.cjs migrate",
    "db:generate:test": "dotenv -e .env.test -- pnpm tsx node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate:test": "dotenv -e .env.test -- pnpm tsx node_modules/drizzle-kit/bin.cjs migrate"
  },
  "keywords": [
    "auth"
  ],
  "author": "RhtWeb",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm lint:fix",
      "pnpm format:fix"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^4.3.4"
  }
}
